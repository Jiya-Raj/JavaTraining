package q3_Bank;

public class SavingAccount extends Account {
	private final double interest;
	private double maxWithdrawLimit;
	private final double minBalance;

	public SavingAccount(String name, String accountNumber, double initialBalance) {
		super(name, accountNumber, initialBalance);
		this.interest = 5;
		this.maxWithdrawLimit = super.getbalance();
		this.minBalance = 5000;
	}

	public double getBalance() {
		return super.getbalance() + (super.getbalance() * interest / 100);
	}

	public void withdraw(double amount) {
		double balanceAfterWithdrawal = super.getbalance() - amount;
		if (amount > maxWithdrawLimit) {
			System.out.println("The amount you want to withdraw is above the withdrawal Limit");
			return;
		}

		if (balanceAfterWithdrawal < minBalance) {
			System.out.println(
					"The remaning balance will be less than the required minimum balance after this withdrawal");
			return;
		}

		super.withdraw(amount);
	}
}
