package Q1_circle;

public class TestCircle {

	public static void main(String[] args) {
		Circle circle=new Circle();
		System.out.println("Test 1, with default values , Radius: "+circle.getRadius()+" Area: "+circle.getArea()+" Circumference: "+circle.getCircumference());
		
		Circle circle2=new Circle(2.5);
		System.out.println("Test 2, Radius: "+circle2.getRadius()+" Area: "+circle2.getArea()+" Circumference: "+circle2.getCircumference());
		
		Circle circle3=new Circle();
		try {
			circle3.setRadius(-1);
		}catch(IllegalArgumentException e) {
			System.out.println(e.getMessage());
		}
	}
}
