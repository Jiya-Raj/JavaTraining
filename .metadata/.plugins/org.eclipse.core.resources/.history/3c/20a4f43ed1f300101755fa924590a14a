package q3_Bank;

public class Bank {

	public static void main(String[] args) {
		SavingsAccount savings = new SavingsAccount("Alice", "SAV123", 10000);
		System.out.println("Savings Account Created: Alice, Balance: " + savings.getBalance());

		// Deposit into Savings
		savings.deposit(5000);
		System.out.println("After deposit, Savings Balance with interest: " + savings.getBalance());

		// Withdraw within limits
		System.out.println("Attempting to withdraw 4000 from Savings...");
		savings.withdraw(4000);
		System.out.println("Savings Balance after withdrawal with interest: " + savings.getBalance());

		// Withdraw exceeding minimum balance
		System.out.println("Attempting to withdraw 12000 from Savings...");
		savings.withdraw(12000);

		System.out.println("\n--- Current Account Tests ---");

		// Create a Current Account
		CurrentAccount current = new CurrentAccount("Bob", "CUR456", 5000, 2000);
		current.setTradeLicenseNumber(12345);
		System.out.println("Current Account Created: Bob, Balance: " + current.getBalance()
				+ ", Overdraft: 2000, Trade License: " + current.getTradeLicenseNumber());

		// Deposit into Current
		current.deposit(3000);
		System.out.println("After deposit, Current Balance: " + current.getBalance());

		// Withdraw within balance
		System.out.println("Attempting to withdraw 6000 from Current...");
		current.withdraw(6000);
		System.out.println("Current Balance after withdrawal: " + current.getBalance());

		// Withdraw exceeding overdraft
		System.out.println("Attempting to withdraw 5000 from Current...");
		current.withdraw(5000);
		System.out.println("Current Balance after attempted overdraft withdrawal: " + current.getBalance());
	}
}
