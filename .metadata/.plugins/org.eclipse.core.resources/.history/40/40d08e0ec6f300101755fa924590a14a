package q2_BookStore;

public class BookStoreApp {

	public static void main(String[] args) {
		BookStore store=new BookStore();
		
		System.out.println("Adding sample books:");
        store.order("ISBN001", 5);
        store.display();
        
        store.order("ISBN002", 3);
        store.display();
        
        System.out.println("Ordering more copies of an existing book:");
        store.order("ISBN001", 2);
        store.display();
        
        System.out.println("sell a non-existing book:");
        store.sell("Unknown", 1);
        store.display();
	}
}
